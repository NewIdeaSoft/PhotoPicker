<?xml version="1.0" encoding="utf-8"?>
<!--增加Toolbar 显示-->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photo_picker_drawer_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_btn_menu"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/btn_menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/btn_menu"
                android:layout_centerVertical="true"
                android:text="选择照片"
                android:textColor="#ffffff"
                android:textSize="16sp"/>
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_btn_check"
                android:id="@+id/btn_down"/>
            <TextView
                android:id="@+id/tv_picked_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/btn_down"
                android:layout_centerVertical="true"
                android:text="点击选择照片"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/titleBar"
            android:id="@+id/rv_photo_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/photo_picker_menu"
        android:background="#ffffff">
    </ListView>
</android.support.v4.widget.DrawerLayout>

